<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:backgroundTint="#3A3939"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header com ícone e símbolo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/coin_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bitcoin_btc_logo"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/coin_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTCUSDT"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/exo_2" />
        </LinearLayout>

        <!-- Amount Section -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/exo_2"
            android:text="Amount:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valor em USD:"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:fontFamily="@font/exo_2"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/amount_eur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="€108,80"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="end"
                android:fontFamily="@font/exo_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quantidade:"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:fontFamily="@font/exo_2"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/amount_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0,0010 BTC"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="end"
                android:fontFamily="@font/exo_2" />
        </LinearLayout>
        <!-- PNL Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PNL"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/exo_2" />

            <TextView
                android:id="@+id/coin_pnl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0,21 USDT"
                android:textColor="#00FF00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/exo_2" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
