<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <!-- Top Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <!-- Language Toggle -->
    <RadioGroup
        android:id="@+id/languageToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/ptLang"
            android:text="PT"
            android:textColor="#FFD700"
            android:buttonTint="#FFD700"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/enLang"
            android:text="EN"
            android:textColor="#AAAAAA"
            android:buttonTint="#AAAAAA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/languageToggle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop" />

    <!-- Full Name -->
    <TextView
        android:id="@+id/fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Óscio Manuel Gomes Negócio"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Username -->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fullName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Nome de utilizador:\noscío_negocio"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <!-- Email -->
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Email:\noscio.negocio@gmail.com"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="14sp" />

    <!-- NIF -->
    <TextView
        android:id="@+id/nif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="NIF:\n251123864"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="14sp" />

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/nif"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray" />

    <!-- Option: Histórico -->
    <TextView
        android:id="@+id/historico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginTop="8dp"
        android:text="Histórico"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground" />

    <!-- Option: Adicionar Fundos -->
    <TextView
        android:id="@+id/adicionarFundos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/historico"
        android:text="Adicionar fundos"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground" />

    <!-- Option: Notificações with Toggle -->
    <RelativeLayout
        android:id="@+id/notificationRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adicionarFundos"
        android:padding="12dp">

        <TextView
            android:id="@+id/notificationsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificações"
            android:textColor="@android:color/white" />

        <Switch
            android:id="@+id/notificationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!-- Option: Editar Informações -->
    <TextView
        android:id="@+id/editarInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notificationRow"
        android:text="Editar informações"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editarInfo"
        android:layout_marginTop="24dp"
        android:text="Terminar sessão"
        android:textColor="@android:color/white"
        android:backgroundTint="#B22222" />

</RelativeLayout>
